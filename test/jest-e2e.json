{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testMatch": ["**/tests/*.js?(x)"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "collectCoverage": true,
  "verbose": true
}
